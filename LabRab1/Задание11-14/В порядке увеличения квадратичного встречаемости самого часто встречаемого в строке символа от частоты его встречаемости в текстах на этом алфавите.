def Sort_string_two():
    text = []
    print('Введите строки')
    while True:
        word = input()
        if word == '':
            break
        text.append(word)

    #отклонение для каждой строки
    deviation = []

    for s in text:
        if len(s) == 0:
            deviation.append(0)
            continue

        #самый частый символ
        max_count = 0
        for char in s:
            count = s.count(char)
            if count > max_count:
                max_count = count

        #частота в строке
        freq_in_string = max_count / len(s)

        #примерная частота в алфавите
        if 'о' in s or 'а' in s or 'е' in s or 'и' in s or 'н' in s or 'т' in s or 'с' in s:
            freq_in_alph = 0.07
        else:
            freq_in_alph = 0.02

        #квадрат отклонение
        kvad_otkl = (freq_in_string - freq_in_alph) ** 2
        deviation.append(kvad_otkl)

    #cортировка
    for i in range(len(text)):
        for j in range(i + 1, len(text)):
            if deviation[i] > deviation[j]:
                text[i], text[j] = text[j], text[i]
                deviation[i], deviation[j] = deviation[j], deviation[i]

    for i in range(len(text)):
        print(f"{text[i]} -> квадрат. отклонение = {deviation[i]}")

Sort_string_two()
